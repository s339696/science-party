# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#Home page
GET     /                           controllers.Application.renderHome()

# Public Area
GET     /login                      controllers.Public.renderLoginPage()
POST    /login                      controllers.Public.handleLoginRequest()

POST    /register                   controllers.Public.handleRegisterRequest()

#Profil
GET     /profile                    controllers.Profil.renderOwnProfil()
GET     /profile/:id                controllers.Profil.renderProfil(id: Long)
GET     /logout                     controllers.Profil.handleLogout()

#Gameplay
GET     /games/                     controllers.Games.renderGames()
GET     /games/pending              controllers.Games.renderPendingGames()
GET     /games/load                 controllers.Games.renderRunningGames()
GET     /games/play/:id             controllers.Games.renderGame(id: Long)
POST    /games/create               controllers.Games.createGame()
POST    /games/delete/:id           controllers.Games.deleteGame(id: Long)
POST    /games/accept/:id           controllers.Games.acceptGame(id: Long)
POST    /games/decline/:id          controllers.Games.declineGame(id: Long)
POST    /games/leave/:id            controllers.Games.leaveGame(id: Long)

# Todo
GET     /register                   controllers.Public.renderRegister()
GET     /blog                       controllers.Application.blog()
GET     /events                     controllers.Application.events()
GET     /kontakt                    controllers.Application.kontakt()

# Playground -> Let's play a bit
GET     /playground                 controllers.Application.playground()

#AutorConnect
POST    /ac/user/list               controllers.AuthorConnect.serveUserlist()
POST    /ac/user/:id                controllers.AuthorConnect.serveUser(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
