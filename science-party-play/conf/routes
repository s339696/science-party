# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Public Area
GET     /login                      controllers.Public.renderLoginPage()
POST    /login                      controllers.Public.handleLoginRequest()

# Home page
GET     /index                      controllers.Application.index()
GET     /                           controllers.Application.home()
GET     /register                   controllers.Application.register()
GET     /blog                       controllers.Application.blog()
GET     /events                     controllers.Application.events()
GET     /kontakt                    controllers.Application.kontakt()

GET     /playground                 controllers.Application.playground()
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
